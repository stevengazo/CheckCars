<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CheckCars.Views.AddReturn"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:CheckCars.Models"
    xmlns:ViewModels="clr-namespace:CheckCars.ViewModels"
    Title="Agregar Salida">
    <ContentPage.BindingContext>
        <ViewModels:AddReturnVM />
    </ContentPage.BindingContext>

    <Grid Padding="20" BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackLayout
            Grid.Row="0"
            Padding="0,10"
            HorizontalOptions="Center">
            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalTextAlignment="Center"
                Text="Información de Reporte"
                TextColor="DarkSlateGray" />
        </StackLayout>

        <!--  Contenido principal  -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10" Spacing="15">
                <!--  Vehículo  -->
                <Label
                    FontSize="Medium"
                    Text="Vehículo"
                    TextColor="Black" />
                <Picker Title="Seleccione el vehículo" />

                <!--  Kilometraje  -->
                <Label
                    FontSize="Medium"
                    Text="Kilometraje"
                    TextColor="Black" />
                <Entry
                    Margin="0,0,0,10"
                    BackgroundColor="{AppThemeBinding Light=White,
                                                      Dark=Gray}"
                    Keyboard="Numeric"
                    Placeholder="Ingrese el kilometraje"
                    
                    TextColor="{AppThemeBinding Light=Black,
                                                Dark=White}" />

                <!--  Imágenes  -->
                <Label
                    FontSize="Medium"
                    Text="Imágenes"
                    TextColor="Black" />
                <Button
                    BackgroundColor="LightGray"
                    CornerRadius="8"
                    HeightRequest="40"
                    Text="Agregar Imágenes"
                    TextColor="Black"
                    Command="{Binding TakePhotoCommand}"
                    />

                <!--  Vista de imágenes  -->
                <CollectionView
                    Margin="0,10"
                    HorizontalOptions="FillAndExpand"
                    ItemsSource="{Binding Photos}"
                    VerticalOptions="Start">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="Models:Photo">
                            <Grid Padding="5">
                                <Image
                                    Aspect="AspectFill"
                                    HeightRequest="150"
                                    HorizontalOptions="Center"
                                    Source="{Binding FilePath}"
                                    WidthRequest="150" />
                                <Button
                                    Padding="4"
                                    BackgroundColor="Crimson"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ViewModels:AddReturnVM}}, Path=DeletePhotoCommand}"
                                    CommandParameter="{Binding .}"
                                    CornerRadius="10"
                                    FontSize="12"
                                    HorizontalOptions="End"
                                    Text="Eliminar"
                                    TextColor="White"
                                    VerticalOptions="End"
                                    WidthRequest="70" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!--  Botones  -->
        <Grid
            Grid.Row="2"
            Padding="10"
            ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                BackgroundColor="SeaGreen"
                CornerRadius="10"
                FontAttributes="Bold"
                HeightRequest="45"
                Text="Agregar"
                Command="{Binding AddReportCommand}"
                TextColor="White" />

            <Button
                Grid.Column="1"
                BackgroundColor="Firebrick"
                CornerRadius="10"
                FontAttributes="Bold"
                HeightRequest="45"
                Text="Cancelar"
                TextColor="White" />
        </Grid>
    </Grid>
</ContentPage>

