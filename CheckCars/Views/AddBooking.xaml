<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CheckCars.Views.AddBooking"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:CheckCars.Models"
    xmlns:ViewModels="clr-namespace:CheckCars.ViewModels"
    Title="Agregar Reserva">
    <Grid RowDefinitions="auto,auto">
        <ScrollView Grid.Row="0">
            <StackLayout Padding="20" Spacing="25">

                <!-- Start Date and Time -->
                <Label Text="Start Date" FontAttributes="Bold" FontSize="Medium" />
                <HorizontalStackLayout Spacing="10">
                    <DatePicker x:Name="startDatePicker" WidthRequest="160" />
                    <TimePicker x:Name="startTimePicker" WidthRequest="140" />
                </HorizontalStackLayout>

                <!-- End Date and Time -->
                <Label Text="End Date" FontAttributes="Bold" FontSize="Medium" />
                <HorizontalStackLayout Spacing="10">
                    <DatePicker x:Name="endDatePicker" WidthRequest="160" />
                    <TimePicker x:Name="endTimePicker" WidthRequest="140" />
                </HorizontalStackLayout>

                <!-- Reason -->
                <Label Text="Reason" FontAttributes="Bold" FontSize="Medium" />
                <Entry x:Name="reasonEntry" Placeholder="Enter reason" />

                <!-- Status -->
                <Label Text="Status" FontAttributes="Bold" FontSize="Medium" />
                <Entry x:Name="statusEntry" Placeholder="Enter status" />

                <!-- User ID -->
                <Label Text="User ID" FontAttributes="Bold" FontSize="Medium" />
                <Entry x:Name="userIdEntry" Placeholder="Enter user ID" />

                <!-- Car ID -->
                <Label Text="Car ID" FontAttributes="Bold" FontSize="Medium" />
                <Entry x:Name="carIdEntry" Keyboard="Numeric" Placeholder="Enter car ID" />

                <!-- Optional separator -->
                <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,20" />

                <!-- Submit Button -->
                <Button Text="Submit" BackgroundColor="#007ACC" TextColor="White" CornerRadius="10" />

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>