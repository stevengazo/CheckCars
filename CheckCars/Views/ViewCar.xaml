<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CheckCars.Views.ViewCar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:CheckCars.Models"
    xmlns:ViewModels="clr-namespace:CheckCars.ViewModels"
    Title="Información de Vehículo">

    <ContentPage.BindingContext>
        <ViewModels:ViewCarVM />
    </ContentPage.BindingContext>

    <Grid RowSpacing="10" Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Información del vehículo -->
        <StackLayout Grid.Row="0" Padding="10" Spacing="5">
            <Label Text="Marca:" FontAttributes="Bold" />
            <Label Text="{Binding Vehicle.Brand}" />

            <Label Text="Modelo:" FontAttributes="Bold" />
            <Label Text="{Binding Vehicle.Model}" />

            <Label Text="Color:" FontAttributes="Bold" />
            <Label Text="{Binding Vehicle.Color}" />

            <Label Text="Tipo de combustible:" FontAttributes="Bold" />
            <Label Text="{Binding Vehicle.FuelType}" />

            <Label Text="Placa:" FontAttributes="Bold" />
            <Label Text="{Binding Vehicle.Plate}" />

            <Label Text="Año:" FontAttributes="Bold" />
            <Label Text="{Binding Vehicle.Year}" />

            <Label Text="VIN:" FontAttributes="Bold" />
            <Label Text="{Binding Vehicle.VIN}" />

            <Label Text="Longitud:" FontAttributes="Bold" />
            <Label Text="{Binding Vehicle.Lenght}" />

            <Label Text="Altura:" FontAttributes="Bold" />
            <Label Text="{Binding Vehicle.Height}" />

            <Label Text="Tipo:" FontAttributes="Bold" />
            <Label Text="{Binding Vehicle.Type}" />

            <Label Text="Fecha de adquisición:" FontAttributes="Bold" />
            <Label Text="{Binding Vehicle.AdquisitionDate}" />
        </StackLayout>

        <!-- Lista de reportes -->
        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding ExistsReports, Mode=OneWay}"
            SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="Models:EntryExitReport">
                    <Frame
                        Margin="2"
                        Padding="5"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=Gray}"
                        BorderColor="Gray"
                        CornerRadius="10"
                        HasShadow="True">

    
                        <StackLayout Orientation="Vertical">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    FontSize="Small"
                                    Text="Vehículo"
                                    TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    FontSize="Small"
                                    Text="{Binding CarPlate}"
                                    TextColor="{AppThemeBinding Light=Black, Dark=White}" />

                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    FontSize="Small"
                                    Text="Estado Mecánico"
                                    TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    FontSize="Small"
                                    Text="{Binding MecanicState}"
                                    TextColor="{AppThemeBinding Light=Black, Dark=White}" />

                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    FontSize="Small"
                                    Text="Estado Llantas"
                                    TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    FontSize="Small"
                                    Text="{Binding TiresState}"
                                    TextColor="{AppThemeBinding Light=Black, Dark=White}" />

                                <Label
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    FontSize="Small"
                                    Text="Kilometraje"
                                    TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                <Label
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    FontSize="Small"
                                    Text="{Binding mileage}"
                                    TextColor="{AppThemeBinding Light=Black, Dark=White}" />

                                <Label
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    FontSize="Small"
                                    Text="Fecha"
                                    TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                <Label
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    FontSize="Small"
                                    Text="{Binding Created}"
                                    TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                            </Grid>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
