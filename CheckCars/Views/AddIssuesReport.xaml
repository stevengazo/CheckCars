<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CheckCars.Views.AddIssuesReport"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:CheckCars.Models"
    xmlns:ViewModels="clr-namespace:CheckCars.ViewModels"
    Title="Agregar Avería"
    x:DataType="ViewModels:AddIssuesReportVM">
    <ContentPage.BindingContext>
        <ViewModels:AddIssuesReportVM />
    </ContentPage.BindingContext>

    <Grid HorizontalOptions="Fill" VerticalOptions="Fill">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="0">

            <StackLayout>
                <Border
                    Margin="10"
                    Padding="3"
                    BackgroundColor="{AppThemeBinding Light=white,
                                                      Dark=DarkGray}"
                    VerticalOptions="Start">
                    <Border.Shadow>
                        <Shadow
                            Brush="Black"
                            Opacity="0.3"
                            Radius="40"
                            Offset="10,10" />
                    </Border.Shadow>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <Grid Padding="10,0,10,10" HorizontalOptions="FillAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Fecha"
                            VerticalOptions="Center" />
                        <DatePicker
                            Grid.Row="0"
                            Grid.Column="1"
                            BackgroundColor="{AppThemeBinding Light=White,
                                                              Dark=Gray}"
                            Date="{Binding newIssueReport.Created}"
                            TextColor="{AppThemeBinding Light=Black,
                                                        Dark=White}" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Vehículo"
                            VerticalOptions="Center" />
                        <Picker
                            Title="Seleccione"
                            Grid.Row="1"
                            Grid.Column="1"
                            BackgroundColor="{AppThemeBinding Light=White,
                                                              Dark=Gray}"
                            ItemsSource="{Binding CarsInfo}"
                            SelectedItem="{Binding newIssueReport.CarPlate}"
                            TextColor="{AppThemeBinding Light=Black,
                                                        Dark=White}" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Prioridad"
                            VerticalOptions="Center" />
                        <Picker
                            Title="Seleccione"
                            Grid.Row="2"
                            Grid.Column="1"
                            BackgroundColor="{AppThemeBinding Light=White,
                                                              Dark=Gray}"
                            SelectedItem="{Binding newIssueReport.Priority}"
                            TextColor="{AppThemeBinding Light=Black,
                                                        Dark=White}">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Urgente</x:String>
                                    <x:String>Leve</x:String>
                                    <x:String>Baja</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                        <Label
                            Grid.Row="3"
                            Grid.Column="0"
                            FontAttributes="Bold"
                            Text="Tipo Problema"
                            VerticalOptions="Center" />
                        <Picker
                            Title="Seleccione"
                            Grid.Row="3"
                            Grid.Column="1"
                            BackgroundColor="{AppThemeBinding Light=White,
                                                              Dark=Gray}"
                            SelectedItem="{Binding newIssueReport.Type}"
                            TextColor="{AppThemeBinding Light=Black,
                                                        Dark=White}">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Mecánico</x:String>
                                    <x:String>Carrocería</x:String>
                                    <x:String>Chasis</x:String>
                                    <x:String>Interior</x:String>
                                    <x:String>Eléctrico</x:String>
                                    <x:String>No Establecido</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                        <Label
                            Grid.Row="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Padding="0"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="Descripción"
                            VerticalOptions="Center" />
                        <Frame
                            Grid.Row="5"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,0"
                            Padding="4,3,4,0">
                            <Editor HeightRequest="120" Text="{Binding newIssueReport.Details}" />
                        </Frame>
                        <Label
                            Grid.Row="6"
                            Grid.Column="0"
                            Text="Autor"
                            VerticalOptions="Center" />
                        <Entry
                            Grid.Row="6"
                            Grid.Column="1"
                            Margin="2"
                            IsEnabled="False"
                            BackgroundColor="{AppThemeBinding Light=White,
                                                              Dark=Gray}"
                            Text="{Binding newIssueReport.Author, Mode=TwoWay}"
                            TextColor="{AppThemeBinding Light=Black,
                                                        Dark=White}"
                            VerticalOptions="Center" />

                    </Grid>
                </Border>

                <VerticalStackLayout Margin="5" Padding="4">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Subtitle"
                        HorizontalOptions="Center">
                        Imágenes
                    </Label>

                    <!--  Botón para tomar foto  -->
                    <Button
                        Margin="2"
                        BackgroundColor="White"
                        BorderColor="Blue"
                        BorderWidth="1"
                        Command="{Binding TakePhotoCommand}"
                        FontSize="Micro"
                        Text="Agregar Foto"
                        TextColor="Blue"
                        WidthRequest="120" />

                    <!--  CollectionView para mostrar las imágenes  -->
                    <CollectionView
                        Margin="10,5"
                        HorizontalOptions="FillAndExpand"
                        ItemsSource="{Binding ImgList}"
                        VerticalOptions="Start">

                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="Models:Photo">
                                <StackLayout Padding="5" Orientation="Vertical">
                                    <Grid>
                                        <!--  Imagen ocupando toda la vista  -->
                                        <Image
                                            Aspect="AspectFill"
                                            HorizontalOptions="CenterAndExpand"
                                            Source="{Binding FilePath}" />
                                        <!--  Botón sobre la esquina inferior derecha  -->
                                        <Button
                                            Margin="5"
                                            Padding="0"
                                            BackgroundColor="Red"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ViewModels:AddIssuesReportVM}}, Path=DeletePhotoCommand}"
                                            CommandParameter="{Binding .}"
                                            FontSize="Micro"
                                            HeightRequest="13"
                                            HorizontalOptions="End"
                                            Text="Eliminar"
                                            TextColor="White"
                                            VerticalOptions="End"
                                            WidthRequest="60" />
                                    </Grid>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </StackLayout>
        </ScrollView>

        <!--  Botón de Agregar Reporte  -->
        <HorizontalStackLayout
            Grid.Row="1"
            Padding="5"
            HorizontalOptions="Center">
            <Button
                BackgroundColor="White"
                BorderColor="Green"
                BorderWidth="1"
                Command="{Binding AddReport}"
                HeightRequest="40"
                Text="Agregar Reporte"
                TextColor="Green"
                WidthRequest="150" />
        </HorizontalStackLayout>

        <!--  Modal  -->
        <ContentView
            Grid.RowSpan="3"
            BackgroundColor="#80000000"
            HorizontalOptions="FillAndExpand"
            IsVisible="{Binding SendingData}"
            VerticalOptions="FillAndExpand">
            <StackLayout
                Padding="20"
                BackgroundColor="White"
                HeightRequest="150"
                HorizontalOptions="Center"
                Spacing="10"
                VerticalOptions="Center"
                WidthRequest="200">
                <ActivityIndicator IsRunning="True" Color="Blue" />
                <Label
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="Enviando información"
                    TextColor="Black" />
            </StackLayout>
        </ContentView>
    </Grid>

</ContentPage>