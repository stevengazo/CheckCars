<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="CheckCars.Views.Components.IssueCardItem"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Padding="10">

    <Frame
        Padding="10"
        BackgroundColor="White"
        BorderColor="LightGray"
        CornerRadius="8"
        HasShadow="True">

        <VerticalStackLayout Spacing="8">
            <Label
                FontAttributes="Bold"
                FontSize="18"
                Text="Issue Details"
                TextColor="#333" />

            <Label
                FontSize="14"
                Text="{Binding Details}"
                TextColor="#666" />

            <Label
                FontAttributes="Bold"
                FontSize="14"
                Text="Priority:"
                TextColor="#333" />
            <Label
                FontSize="14"
                Text="{Binding Priority}"
                TextColor="#666" />

            <Label
                FontAttributes="Bold"
                FontSize="14"
                Text="Created:"
                TextColor="#333" />
            <Label
                FontSize="14"
                Text="{Binding Created}"
                TextColor="#666" />
        </VerticalStackLayout>
    </Frame>
</ContentView>
