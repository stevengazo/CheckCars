<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CheckCars.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ViewModels="clr-namespace:CheckCars.ViewModels">

    <Grid RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackLayout
            Grid.Row="0"
            Grid.Column="0"
            Margin="20"
            VerticalOptions="Start">
            <Label
                HorizontalOptions="Center"
                Text="Despacho de Vehículo"
                VerticalOptions="Start" />
            <ImageButton
                BackgroundColor="LightBlue"
                Command="{Binding ViewEntryExitList}"
                CornerRadius="10"
                HeightRequest="200"
                Source="checklist.png" />
        </StackLayout>
        <StackLayout
            Grid.Row="0"
            Grid.Column="1"
            Margin="20"
            VerticalOptions="Start">
            <Label
                HorizontalOptions="Center"
                Text="Retorno de Vehículo"
                VerticalOptions="Start" />
            <ImageButton
                BackgroundColor="LightBlue"
                Command="{Binding ReturnList }"
                CornerRadius="10"
                HeightRequest="200"
                Source="checklist.png" />
        </StackLayout>
        <StackLayout
            Grid.Row="1"
            Grid.Column="0"
            Margin="20"
            VerticalOptions="Start">
            <Label
                HorizontalOptions="Center"
                Text="Accidentes"
                VerticalOptions="Start" />
            <ImageButton
                BackgroundColor="LightBlue"
                Command="{Binding CrashList}"
                CornerRadius="10"
                HeightRequest="200"
                Source="carcrash.png" />
        </StackLayout>
        <StackLayout
            Grid.Row="1"
            Grid.Column="1"
            Margin="20"
            VerticalOptions="Start">
            <Label
                HorizontalOptions="Center"
                Text="Problemas"
                VerticalOptions="Start" />
            <ImageButton
                BackgroundColor="LightBlue"
                Command="{Binding IssuesList}"
                CornerRadius="10"
                HeightRequest="200"
                Source="caraccident.png" />
        </StackLayout>
    </Grid>
</ContentPage>
